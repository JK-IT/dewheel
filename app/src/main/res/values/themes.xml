<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- ?main theme style-->
    <style name="Theme.Dewheel"  parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_primaryInverse</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!--toolbar style-->
        <!--<item name="android:toolbarStyle">@style/dewheel.widget.toobar</item>-->
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/spinnaker</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--customize button-->
        <item name="materialButtonStyle">@style/dewheel.button.filled</item>
        <!--text appearance'-->

    </style>
    <!-- * main theme style-->

    <!-- ?  chat activity style-->
    <style name="Theme.Dewheel.Chat" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
    </style>
    <!-- *  chat activity style-->

    <!-- ? typo style-->

    <style name="dewheel.text.headlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/aldrich</item>
        <item name="android:textColor">@color/md_theme_light_secondary</item>
    </style>

    <style name="dewheel.text.labelLarge" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="dewheel.title.small" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/md_theme_light_tertiary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dewheel.text.labelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/spinnaker</item>
        <item name="android:fontFamily">@font/spinnaker </item>
    </style>
    <!--* typo style-->

    <!--? button style-->
    <style name="dewheel.button.filled" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/dewheel.cutshape.leftright</item>
    </style>

    <style name="dewheel.button.tona.cut" parent="Widget.Material3.Button.TonalButton">
        <item name="shapeAppearance">@style/dewheel.cutshape.leftright</item>
    </style>

    <!--* button style-->

    <!-- ?      shape style     -->
    <style name="dewheel.cutshape.leftright" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">6dp</item>
        <item name="cornerSizeTopLeft">6dp</item>
    </style>

    <style name="dewheel.cutshape.allcut" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">7dp</item>
    </style>
    <!-- *      shape style-->

    <!-- ?      card style     -->
    <style name="dewheel.card.elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">13dp</item>
    </style>
    <!-- *     card style-->

    <!-- ?     filter chip style     -->
    <style name="dewheel.chip.filter" parent="Widget.Material3.Chip.Filter">
        <item name="materialThemeOverlay">@style/ThemeOverlay.dewheel.chip</item>
        <item name="chipBackgroundColor">@color/chip_state_color</item>
        <item name="android:textAppearance">@style/dewheel.text.labelSmall</item>
        <item name="shapeAppearance">@style/dewheel.cutshape.allcut</item>
    </style>

    <style name="ThemeOverlay.dewheel.chip" parent="">
        <item name="colorOnSurface">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onPrimaryContainer</item>
    </style>
    <!-- *      filter chip style       -->

    <!--?           MAPS ACTIVITY STYLE THEME-->
    <style name="dewheel.maps.theme" parent="Theme.Dewheel">
        <!--<item name="android:navigationBarColor">
            @android:color/transparent
        </item>-->

        <!-- Optional, if your app is drawing behind the status bar also. -->
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
    </style>

    <!--*           MAPS ACTIVITY STYLE-->

</resources>