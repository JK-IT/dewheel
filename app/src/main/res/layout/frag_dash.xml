<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashFragment">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:fitsSystemWindows="true"
       android:animateLayoutChanges="true"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          android:id="@+id/dashboard_header_cardview"
          android:layout_marginVertical="10dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
               <ImageView
                   android:src="@drawable/ic_baseline_emoji_face_24"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
            </FrameLayout>

            <TextView
                android:id="@+id/dashboard_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/dewheel.text.headlineLarge"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hello There" />

            <Button
                android:text="Become a Verified User"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_gravity="end"
                android:layout_width="40dp"
                android:layout_height="40dp">
               <ImageView
                   android:id="@+id/dashboard_header_showinfo_btn"
                   android:src="@drawable/ic_baseline_arrow_drop_up_24"
                   android:scaleType="fitCenter"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
            </FrameLayout>
            <!--user info group -->
            <LinearLayout
                android:id="@+id/dashboard_header_user_info_grp"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputLayout
                   android:hint="Username"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_marginVertical="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                  <com.google.android.material.textfield.TextInputEditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:hint="Date of Birth"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_marginVertical="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                  <com.google.android.material.textfield.TextInputEditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:hint="Gender"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_marginVertical="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                  <com.google.android.material.textfield.TextInputEditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:hint="Sexual Orientation"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_marginVertical="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                  <com.google.android.material.textfield.TextInputEditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:hint="About Yourself"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_marginVertical="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                  <com.google.android.material.textfield.TextInputEditText
                      android:lines="2"
                      android:inputType="textMultiLine"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
               </com.google.android.material.textfield.TextInputLayout>

               <Button
                   android:id="@+id/dashboard_header_user_info_update_btn"
                   style="@style/Widget.Material3.Button.TextButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end"
                   android:text="Update" />
            </LinearLayout>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/dashboard_location_reference_cardview"
          android:layout_marginVertical="10dp"
          app:layout_constraintTop_toBottomOf="@id/dashboard_header_cardview"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:text="Your Interested Location"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="United States of America"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:text="Set Location"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="What's happening now"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/dashboard_loved_events_cardview"
          android:layout_marginVertical="10dp"
          app:layout_constraintTop_toBottomOf="@id/dashboard_location_reference_cardview"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <LinearLayout
            android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:text="Your Interested Events"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/dashboard_social_cardview"
          app:layout_constraintTop_toBottomOf="@id/dashboard_loved_events_cardview"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <LinearLayout
            android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

         </LinearLayout>
      </androidx.cardview.widget.CardView>

   </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
