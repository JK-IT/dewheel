<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserFragment">
        <!--=== USER HEADER ====-->
        <LinearLayout
            android:id="@+id/user_header"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/user_login_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginVertical="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_emoji_face_24"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>
            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Design.TextInputLayout"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:text="Hey, there"
                    android:inputType="text"
                    android:textSize="30sp"
                    android:textFontWeight="600"
                    android:imeOptions="actionDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!--=== LOGIN HEADER ===-->
        <LinearLayout
            android:id="@+id/user_login_header"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/user_verified_img"
                    android:src="@drawable/ic_baseline_verified_user_24"
                    app:tint="@color/purple_500"
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
            </FrameLayout>
            <Button
                android:id="@+id/user_verified_btn"
                android:text="Become A Verifed User"
                android:enabled="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_gravity="center"
                android:background="#D1D0D0"
                android:layout_width="200dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <!--=== USER INFO BODY ===-->
        <LinearLayout
            android:id="@+id/user_info_body"
            android:background="#17D1D1D1"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_login_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="3dp"
                android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Gender"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:hint="Male/Female.,."
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:textSize="30dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:text="Update"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:textColor="@color/my_butt_color"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:text="You cannot change your gender after confirming"
                android:textSize="@dimen/miniText"
                android:textColor="#757575"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="3dp"
                android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Interested In"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:hint="Man/Woman/Both.,."
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:text="Update"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:textColor="@color/my_butt_color"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="3dp"
                android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Favorites"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Cooking, Games, Hiking , etc.,."
                        app:hintEnabled="true"
                        style="@style/Widget.Design.TextInputLayout"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:lines="3"
                            android:maxLines="4"
                            android:inputType="text"
                            android:textSize="@dimen/medText"
                            android:imeOptions="actionDone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:text="Update"
                        android:textColor="@color/my_butt_color"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_marginHorizontal="5dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!--=== ACCOUNT INTERACTION ===-->
        <LinearLayout
            android:id="@+id/user_account_group"
            android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_info_body"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Log out"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="Delete Account"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



