<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserFragment">
        <!--=== USER HEADER ====-->
        <LinearLayout
            android:id="@+id/user_header"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/user_login_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginVertical="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_emoji_face_24"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/user_disname"
                android:text="Hey, there"
                android:textFontWeight="600"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <View
                android:layout_gravity="center"
                android:background="#D1D0D0"
                android:layout_width="200dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <!--=== LOGIN HEADER ===-->
        <LinearLayout
            android:id="@+id/user_login_header"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_verified_user_24"
                    app:tint="@color/purple_500"
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
            </FrameLayout>
            <Button
                android:text="Become A Verifed User"
                android:enabled="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_gravity="center"
                android:background="#D1D0D0"
                android:layout_width="200dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <!--=== USER INFO BODY ===-->
        <LinearLayout
            android:id="@+id/user_info_body"
            android:background="#17D1D1D1"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_login_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="3dp"
                android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Name"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:layout_gravity="start"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <FrameLayout
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:layout_width="23dp"
                                android:layout_height="23dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_email_body"
                        android:text="Update your name"
                        android:textSize="@dimen/bodyText1"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:id="@+id/user_name_update_group"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/user_name_update_input"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:imeOptions="actionDone"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/user_name_update_btn"
                            android:text="Update"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:textColor="@color/my_butt_color"
                            android:layout_gravity="end"
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="3dp"
                android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Gender"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Male"
                            android:textSize="@dimen/medText"
                            android:gravity="center"
                            android:layout_marginVertical="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Female"
                            android:textSize="@dimen/medText"
                            android:gravity="center"
                            android:layout_marginVertical="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <Button
                        android:text="Update"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:textColor="@color/my_butt_color"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:text="You cannot change your gender after confirming"
                android:textSize="@dimen/miniText"
                android:textColor="#757575"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="3dp"
                android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Interested In"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Man"
                            android:textSize="@dimen/medText"
                            android:gravity="center"
                            android:layout_marginVertical="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Woman"
                            android:textSize="@dimen/medText"
                            android:gravity="center"
                            android:layout_marginVertical="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <Button
                        android:text="Update"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:textColor="@color/my_butt_color"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="3dp"
                android:layout_marginVertical="@dimen/ele_vertical_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Favorites"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Cooking, Games, Hiking , etc.,."
                        app:hintEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:lines="3"
                            android:maxLines="4"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:text="Update"
                        android:textColor="@color/my_butt_color"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_marginHorizontal="5dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



