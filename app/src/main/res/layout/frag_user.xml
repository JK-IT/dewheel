<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">
    <!--=== USER HEADER ====-->
    <LinearLayout
        android:id="@+id/user_header"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_login_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginVertical="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_emoji_face_24"
                android:layout_width="130dp"
                android:layout_height="130dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/user_disname"
            android:text="Hey, there"
            android:textFontWeight="600"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <View
            android:layout_gravity="center"
            android:background="#D1D0D0"
            android:layout_width="200dp"
            android:layout_height="1dp"/>
    </LinearLayout>

    <!--=== LOGIN HEADER ===-->
    <LinearLayout
        android:id="@+id/user_login_header"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_verified_user_24"
                app:tint="@color/purple_500"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </FrameLayout>
        <Button
            android:text="Become A Verifed User"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
